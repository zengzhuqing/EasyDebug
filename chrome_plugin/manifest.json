{
  "manifest_version": 2,

  "name": "Getting started example",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.0",

  "background": {
      "scripts": ["js/jquery.min.js", "js/background.js"],
      "persistent": true,
      "all_frames": true
  },

  "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html",
      "all_frames": true
   },

  "permissions": [
      "tabs",
      "http://*/",
      "https://*/"
  ]
}
